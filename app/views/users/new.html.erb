<%= render 'shared/content_title', title: 'Signup' %>

<div class='well'>
<%= form_for @user do |f| %>
<%= render 'shared/errors', obj: @user %>
<div class='control-group'>
	<%= f.label :username %>
	<%= f.text_field :username %>
</div>
<div class='control-group'>
	<%= f.label :password %>
	<%= f.password_field :password %>
</div>
<%= f.submit "Signup", class: 'btn btn-success' %>
<% end %>
</div>