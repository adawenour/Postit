<%= render 'shared/errors', obj: @post %>

<div class='well'>
	<%= form_for @post, html: { multipart: true } do |f| %>
	<div class='control-group'>
		<%= f.label :title %>
		<%= f.text_field :title %>
	</div>
	<div class='control-group'>
		<%= f.label :url %>
		<%= f.text_field :url %>
	</div>

	<div class="control-group">
	    <%= f.label :image, 'Upload an image' %>
	    <%= f.file_field :image, class: "control-group" %>
  	</div>

  	<div class="form-group">
	   <%= f.label :Or_Add_Image_Upload_Via_URL %>
	   <%= f.text_field :image_remote_url,  class: "form-control" %>
  	</div>

	<div class='control-group'>
		<%= f.label :description %>
		<%= f.text_area :description, rows: 5 %>
	</div>
	<div class='control-group'>
		<%= f.label "Categories" %>
		<%= f.collection_check_boxes :category_ids, Category.all, :id, :name do |cb|%>
		<% cb.label(class: "checkbox inline") {cb.check_box(class: "checkbox") + cb.text} %>
		<% end %>
	</div>
	<%= f.submit(@post.new_record? ? 'Create Post' : 'Update Post', class: 'btn btn-primary') %>
	<% end %>
</div>